{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "lang/**",
          "utils/**",
          "myData.json",
          "nuxt.default.config.js",
          "node.tsconfig.json",
          "assets/images/**",
          "blog-posts/**"
        ],
        "tscOptions": {
          "skipLibCheck": true
        }
      }
    }
  ]
}
